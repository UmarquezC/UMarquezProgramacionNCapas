@model ML.Sucursal
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2>Agregar Sucursal</h2>

@using (Html.BeginForm("Form", "Sucursal", FormMethod.Post))
{
    @Html.HiddenFor(model => model.IdSucursal)
    <div class="mb-3">
        @Html.LabelFor(model => model.Nombre, new { @class = "form-label" })
        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", required = "required" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(model => model.Latitud, new { @class = "form-label" })
        @Html.TextBoxFor(model => model.Latitud, new { @class = "form-control", required = "required", type = "number", step = "any" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(model => model.Longitud, new { @class = "form-label" })
        @Html.TextBoxFor(model => model.Longitud, new { @class = "form-control", required = "required", type = "number", step = "any" })
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a href="@Url.Action("Index", "Sucursal")" class="btn btn-secondary">Cancelar</a>
}
